{
  "request": {
    "url": "/mock/test",
    "method": "POST",
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.test",
          "equalTo": "hello"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "body": "{'test':'world'}",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}